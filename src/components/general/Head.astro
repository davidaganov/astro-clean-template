---
import { Font } from "astro:assets"

const { title = "Заголовок сайта", description = "" } = Astro.props
---

<head>
  <meta charset="UTF-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0"
  />
  <meta
    name="generator"
    content={Astro.generator}
  />

  <title>{title}</title>

  {
    description && (
      <meta
        name="description"
        content={description}
      />
    )
  }

  <Font
    cssVariable="--font-roboto"
    preload
  />

  <link
    rel="icon"
    type="image/svg+xml"
    href="/favicon.svg"
  />
</head>
